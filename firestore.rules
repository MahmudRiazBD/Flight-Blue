
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for Admin roles
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
    }

    // Users Collection
    // Allow users to create their own profile, but not anyone else's.
    // Allow users to read/update their own profile.
    // Admins can read/update any user profile.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId; // A user can create their own doc
    }

    // General read access for most collections
    match /{document=**} {
        allow read: if true;
    }

    // Bookings Collection
    // Allow any authenticated user to create a booking (submit a form).
    // Only admins can update or delete bookings.
    match /bookings/{bookingId} {
        allow create: if request.auth != null;
        allow update, delete: if isAdmin();
    }
    
    // Contact Messages Collection
    // Allow anyone to create a message (submit the contact form).
    // Only admins can update or delete messages.
    match /contactMessages/{messageId} {
        allow create: if true;
        allow update, delete: if isAdmin();
    }

    // All other collections should only be writable by admins.
    // This includes 'packages', 'posts', 'categories', 'destinations', 
    // 'packageTypes', 'media', and the 'settings' documents.
    match /{collection}/{docId} {
      allow write: if isAdmin();
    }
  }
}
